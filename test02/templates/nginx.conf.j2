upstream monit {
{% if monit_port is defined %}
	server localhost:{{ monit_port }};
{% else %}
        server localhost:2812;
{% endif %}
}

server {
	listen 80 default_server;
	listen [::]:80 default_server;

location / {
    auth_basic "Monit Administation Area";
    auth_basic_user_file /etc/nginx/passwdfordefault;
    proxy_pass http://monit;
}

        error_log /var/log/nginx/error.log;
        access_log /var/log/nginx/access.log;
}
